// Custom styles.
//页面背景
@media screen and (min-width:720px) {
    body {
      background:url(/images/page-bg.jpg);
      background-size: cover;
      background-repeat: no-repeat;
      background-attachment:fixed; // 鼠标滚动背景不动
      background-position:50% 50%;
    }
    .posts-expand .post {
        margin-top: 80px;
    }
    #footer {
        color:#c8c8c8;
    }
}
//修改选中文本背景色，因为是黑色与代码块的默认和黑色冲突，导致看不出来是否选中代码了。
::selection {
  /*background: #3194d0;*/
  color: #fff;
}
//去掉头像边框
.site-author-image {
    border: none;
}
.site-author-image {
  display: block;
  margin: 0 auto;
  padding: $site-author-image-padding;
  max-width: $site-author-image-width;
  height: $site-author-image-height;
  // 设置旋转
  transition: 1.5s all;
}
// 可旋转的圆形头像,`hover`动作
.site-author-image:hover {
    -webkit-transform: rotate3d(0,1,0,360deg) skewY(5deg);
    -moz-transform: rotate3d(0,1,0,360deg) skewY(5deg);
    -ms-transform: rotate3d(0,1,0,360deg) skewY(5deg);
    transform: rotate3d(0,1,0,360deg) skewY(5deg);
}
//文章内容的a标签
.post a{
  border-bottom: 1px solid #fadc23;
}
.post a:hover {
    -webkit-transition: box-shadow .2s linear;
    transition: box-shadow .2s linear;
    box-shadow: inset 0 -10px #fadc23;
}
//代码块自定义
code {
    color: #c7254e;
    background: #f7f7f7;
    margin: 2px .5em;
}
.highlight{
  background: #f5f2f0;
}
.highlight .gutter pre{
    color: #d2d0d0;
}

.highlight .gutter pre,
.highlight .code pre {
    background-color: #f5f2f0;
}

//代码块复制按钮
.highlight{
  //方便copy代码按钮（btn-copy）的定位
  position: relative;
}
.btn-copy {
    display: inline-block;
    cursor: pointer;
    background-color: #eee;
    background-image: linear-gradient(#fcfcfc,#eee);
    border: 1px solid #d5d5d5;
    border-radius: 3px;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-appearance: none;
    font-size: 13px;
    font-weight: 700;
    line-height: 20px;
    color: #333;
    -webkit-transition: opacity .3s ease-in-out;
    -o-transition: opacity .3s ease-in-out;
    transition: opacity .3s ease-in-out;
    padding: 2px 6px;
    position: absolute;
    right: 5px;
    top: 5px;
    opacity: 0;
}
.btn-copy span {
    margin-left: 5px;
}
.highlight:hover .btn-copy{
  opacity: 1;
}
